<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp"
    app:strokeColor="@color/light_background_yellow_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_background_yellow_2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_mood_today"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/emoji_okay"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/mood_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="78dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="12dp"
            android:text="@string/text_activity_mood"
            android:textColor="@color/light_border_yellow_8"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            app:layout_constraintStart_toEndOf="@id/icon_mood_today"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="78dp"
            android:layout_marginEnd="15dp"
            android:paddingTop="4dp"
            android:text="@string/text_activity_time"
            android:textColor="@color/light_border_yellow_8"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textAlignment="textStart"
            app:layout_constraintStart_toEndOf="@id/icon_mood_today"
            app:layout_constraintTop_toBottomOf="@id/mood_today" />

        <TextView
            android:id="@+id/notes_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="12dp"
            android:text="@string/text_activity_notes"
            android:textColor="@color/light_border_yellow_8"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>