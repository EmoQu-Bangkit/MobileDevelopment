<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_navigation"
    app:startDestination="@id/today_fragment">

    <fragment
        android:id="@+id/today_fragment"
        android:name="com.capstone.emoqu.ui.today.TodayFragment"
        android:label="fragment_today"
        tools:layout="@layout/fragment_today" >

        <action
            android:id="@+id/action_todayFragment_to_addFragment"
            app:destination="@id/add_fragment" />

    </fragment>

    <fragment
        android:id="@+id/add_fragment"
        android:name="com.capstone.emoqu.ui.add.AddFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >

        <action
            android:id="@+id/action_addFragment_to_todayFragment"
            app:destination="@id/today_fragment" />

    </fragment>

</navigation>